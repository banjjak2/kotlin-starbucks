<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/font_family</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="DefaultTextStyle.Bold" parent="DefaultTextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextStyle.Small" parent="DefaultTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DefaultTextStyle.Small.Bold" parent="DefaultTextStyle.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextStyle.Medium" parent="DefaultTextStyle">
        <item name="fontWeight">500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultTextStyle.Medium.Bold" parent="DefaultTextStyle.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultTextStyle.Large" parent="DefaultTextStyle">
        <item name="fontWeight">700</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DefaultTextStyle.Large.Bold" parent="DefaultTextStyle.Large">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_full_screen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
<!--        <item name="android:statusBarColor">#00000000</item>-->
    </style>

</resources>